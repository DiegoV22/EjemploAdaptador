@{
    ViewData["Title"] = "Participantes";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #f4f4f9;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        h1 {
            font-size: 2.5em;
            margin: 100px 0 20px; /* Ajusta el margen superior según sea necesario */
            color: #333;
            text-shadow: 1px 1px #aaa;
        }

        .name-card {
            background-color: #d1e7dd;
            color: #004d40;
            padding: 15px 25px;
            margin: 10px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 300px;
            text-align: center;
            font-size: 1.2em;
        }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div class="name-card">Diego Vega</div>
    <div class="name-card">Ricardo Perez</div>
    <div class="name-card">Jossue Ayala</div>
    <div class="name-card">Nicolas Negrete</div>
    <div class="name-card">Mauricio Olivo</div>
</body>
</html>
